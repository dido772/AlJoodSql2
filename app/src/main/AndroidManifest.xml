<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.aljood.aljoodsql">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SQL.Splash_Login.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SQL.Splash_Login.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".SQL.Customer.CreateCusActivity" />
        <activity android:name=".SQL.Home.HomeFragment" />
        <activity
            android:name=".SQL.Main_Menu_Lang.MainActivity"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SQL.Main_Menu_Lang.LanguageActivity"
            android:label="@string/title_activity_language" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".SQL.items.Item_Card.Item_Card" />
        <activity android:name=".SQL.items.Images_View_Activity" />
        <activity android:name=".SQL.Main_Menu_Lang.ProfileActivity" />
        <activity android:name=".SQL.Customer.Update_Cus_Activity" />
        <activity android:name=".SQL.Address.Address_Activity" />
        <activity android:name=".SQL.Address.Create_Address_Activity"></activity>
    </application>

</manifest>