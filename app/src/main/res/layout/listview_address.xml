<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    android:background="@color/white"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_in_lv_address"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/white"
        >

        <LinearLayout
            android:id="@+id/linmggfg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/white"
            >

            <ImageView
                android:id="@+id/img_place_address"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/place"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/txt_full_name_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:text="Eyad Dado"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/darkgray"/>

                <TextView
                    android:id="@+id/txt_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="(Guldringen 96 Lgh)"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txt_post_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="(603 68 NorrkÃ¶ping)"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llls"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="60dp"
                android:orientation="vertical"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/img_edit_address"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"

                    />

                <ImageView
                    android:id="@+id/img_delete_address"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>